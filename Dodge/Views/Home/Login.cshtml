@model Dodge.Models.User
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="container">

    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <section class="login-form">                
                <form asp-action="up" method="post">
                    <img src="https://www.dodgegarage.com/assets/images/logos/dodge-garage-logo.svg" class="img-responsive" alt="" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="userName"></label>
                        <input asp-for="userName" class="form-control" required />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="password"></label>
                        <input type="password" asp-for="password" class="form-control" required />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">LOGIN</button>
                    </div>
                    <h4 class="text-danger text-center">@TempData["Error"]</h4>
                </form>
            </section>
        </div>
    </div>
</div>
