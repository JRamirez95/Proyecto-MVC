@model IEnumerable<Dodge.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">

@if (Session.isSingin == false)
{
    <h2>SORRY ! <i class="far fa-frown"></i></h2>
    <h3>You doesn't have permissions <i class="fas fa-lock"></i></h3>

}
else
{
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">
    <link href="~/css/table.css" rel="stylesheet" />

    <h2>Contacts</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <div class="container">
        <div class="row">
            <div class="table-responsive">
                <table id="main-table" class="table exotic-table">
                    <thead>
                        <tr class="text-center">
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.lastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.jobPositions)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.client)
                            </th>
                            <th><em class="fa fa-cog"></em> Options</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.lastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.jobPositions)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.client.name)
                                </td>
                                <td align="center">
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-success"><em class="fas fa-pencil-alt"></em></a>
                                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary"><em class="fas fa-eye"></em></a>
                                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger"><em class="fas fa-trash-alt"></em></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}