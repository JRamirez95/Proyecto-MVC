@model Dodge.Models.Meetings

@{
    ViewData["Title"] = "Details";
}

<link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">

@if (Session.isSingin == false)
{
    <h2>SORRY ! <i class="far fa-frown"></i></h2>
    <h3>You doesn't have permissions <i class="fas fa-lock"></i></h3>

}
else
{   

    <div>
        <h4>Details of Meeting</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.subject)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.subject)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.date)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AVirtual)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AVirtual)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Client)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Client.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.name)
                @Html.DisplayFor(model => model.User.lastName)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.id">Edit</a>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
}